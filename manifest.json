{
  "manifest_version": 3,
  "name": "Readify \u2014 Powered by Knoxy Nexus",
  "version": "3.0",
  "description": "Reads selected text or full page aloud. Manual activation; floating controls; auto theme.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "<all_urls>"
  ]
}